@{
  Layout = "_Layout";
}
    @using Pierre.Models;

    <h1>Flavors</h1>
    @if (@Model.Count == 0)
    {
      <h3>No Flavors have been added yet!</h3>
    }
    <ul>
      <h3>Savory</h3>
        @foreach (Flavor flavor in Model)
      {
        @if(flavor.Type == "Savory")
      {
        <li>@Html.ActionLink($"{flavor.Description}", "Details", new{id = flavor.FlavorId})</li>

      }
    }
    <h3>Sweet</h3>
    @foreach(Flavor flavor in Model)
    {
      @if(flavor.Type == "Sweet")
      {
        <li>@Html.ActionLink($"{flavor.Description}", "Details", new{id = flavor.FlavorId})</li>
      }
    }
    </ul>
    @using(Html.BeginForm("Search", "Flavors", FormMethod.Post))
    {
      <label>Search for Flavors</label>
      @Html.TextBox("flavorDescription")
      <input type="submit" value="Search">
    }
    <p>@Html.ActionLink("Home", "Index", "Home")</p>
    <p>@Html.ActionLink("Treats","Index", "Treats")</p>
