@{
  Layout = "_Layout";
}
@using Pierre.Models;

<h1>Treats Matching Your Search</h1>

@if (@Model.Count == 0)
{
  <h3>No treats found!</h3>
}

<ul>
  @foreach(Treat treat in Model)
  {
    <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</li>
  }
</ul>

<p>@Html.ActionLink("Back to treats", "Index")</p>